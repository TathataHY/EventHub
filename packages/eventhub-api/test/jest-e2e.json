{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^eventhub-domain$": "<rootDir>/../../eventhub-domain/src",
    "^eventhub-application$": "<rootDir>/../../eventhub-application/src"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup-test.ts"]
}
