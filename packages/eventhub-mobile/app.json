{
  "expo": {
    "name": "EventHub",
    "slug": "eventhub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eventhub.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "EventHub necesita acceso a tu ubicación para mostrarte eventos cercanos y ayudarte a llegar al lugar del evento.",
        "NSLocationAlwaysUsageDescription": "EventHub necesita acceso a tu ubicación para mostrarte eventos cercanos y ayudarte a llegar al lugar del evento.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.eventhub.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "app"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "EventHub necesita acceso a tu ubicación para mostrarte eventos cercanos y ayudarte a llegar al lugar del evento."
        }
      ]
    ],
    "scheme": "eventhub",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "3e8eb967-1e21-44ca-b836-c1e21d0c8ddb"
      }
    }
  }
}
