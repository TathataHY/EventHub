{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "eventhub-shared/*": [
        "../eventhub-shared/src/*"
      ],
      "@modules/*": ["src/modules/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["src/shared/*"],
      "@assets/*": ["assets/*"],
      "@theme/*": ["src/theme/*"],
      "@app/*": ["app/*"]
    },
    "outDir": "./dist",
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
